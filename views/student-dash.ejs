<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Student Dashboard</title>

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

<style>
*{box-sizing:border-box;}
body{
    margin:0;
    font-family:Inter, sans-serif;
    background:#f4f6fb;
    padding-bottom:90px;
}

/* HEADER */
.header{
    padding:18px 20px;
    background:white;
    border-bottom:1px solid #e5e7eb;
}
.header h1{
    font-size:22px;
    margin:0;
}
.header p{
    margin:4px 0 0;
    color:#6b7280;
    font-size:13px;
}

/* SEARCH */
.search-box{
    margin:15px;
    background:white;
    padding:12px 15px;
    border-radius:14px;
    display:flex;
    align-items:center;
    gap:10px;
    box-shadow:0 4px 10px rgba(0,0,0,0.05);
}
.search-box input{
    border:none;
    outline:none;
    flex:1;
    font-size:15px;
}

/* JOB CARD */
.job{
    background:white;
    margin:15px;
    border-radius:18px;
    padding:18px;
    box-shadow:0 10px 25px rgba(0,0,0,0.05);
}
.job h3{
    margin:0;
    font-size:18px;
}
.job small{
    color:#6b7280;
}
.badges{
    margin:12px 0;
}
.badges span{
    display:inline-block;
    background:#eef2ff;
    color:#4f46e5;
    padding:6px 12px;
    border-radius:999px;
    font-size:12px;
    margin:3px;
}

/* INFO BAR */
.info{
    display:flex;
    justify-content:space-between;
    background:#f3f4f6;
    border-radius:12px;
    padding:10px;
    margin:12px 0;
    font-size:13px;
    color:#374151;
}

/* BUTTONS */
.actions{
    display:grid;
    grid-template-columns:1fr 1fr;
    gap:12px;
}
.visit{
    border:2px solid #6366f1;
    border-radius:14px;
    background:white;
    color:#6366f1;
    padding:12px;
    text-align:center;
    font-weight:700;
    text-decoration:none;
}
.apply{
    background:linear-gradient(135deg,#4f46e5,#6366f1);
    border:none;
    border-radius:14px;
    color:white;
    font-weight:700;
    padding:12px;
}

/* BOTTOM NAV */
.nav{
    position:fixed;
    bottom:0;
    left:0;
    right:0;
    background:white;
    display:flex;
    justify-content:space-around;
    padding:12px 0;
    box-shadow:0 -5px 20px rgba(0,0,0,0.08);
}
.nav a{
    text-decoration:none;
    color:#6b7280;
    text-align:center;
    font-size:12px;
}
.nav .active{
    color:#4f46e5;
    font-weight:700;
}
.apply-btn{
    display:flex;
    align-items:center;
    justify-content:center;
    gap:10px;
    width:100%;
    padding:14px;
    border:none;
    border-radius:16px;
    font-weight:700;
    font-size:15px;
    background:linear-gradient(135deg,#22c55e,#16a34a);
    color:white;
    cursor:pointer;
    box-shadow:0 10px 25px rgba(34,197,94,.35);
    transition:transform .15s ease, box-shadow .15s ease;
}

.apply-btn:hover{
    transform:translateY(-2px) scale(1.02);
    box-shadow:0 15px 35px rgba(34,197,94,.45);
}

.apply-btn:active{
    transform:scale(.97);
}

.apply-btn .icon{
    font-size:18px;
    animation:pulse 1.6s infinite;
}

@keyframes pulse{
    0%{transform:scale(1);}
    50%{transform:scale(1.15);}
    100%{transform:scale(1);}
}

</style>
</head>

<body>

<div class="header">
    <h1>Explore Internships</h1>
    <p>Find and track your applications</p>
</div>

<div class="search-box">
    üîç
    <input id="search" placeholder="Search by title, skills, recruiter">
</div>

<% internships.forEach(job => { %>
<div class="job" data-search="<%= job.title.toLowerCase() %> <%= job.skills_needed.toLowerCase() %> <%= job.recruiter.toLowerCase() %>">
    <h3><%= job.title %></h3>
    <small>by <b><%= job.recruiter %></b></small>

    <div class="badges">
        <% job.skills_needed.split(',').forEach(skill => { %>
            <span><%= skill.trim() %></span>
        <% }) %>
    </div>

    <div class="info">
        <div>üéì Year: <%= job.target_year %></div>
        <div>üë• <%= job.open_positions %> Openings</div>
    </div>

    <div class="actions">
        <a href="<%= job.link %>" target="_blank" class="visit">üåê Visit</a>

        <form action="/apply/<%= job.id %>" method="POST">
    <button class="apply-btn">
        <span class="icon">üöÄ</span>
        <span class="text">Mark as Applied</span>
    </button>
</form>

    </div>
</div>
<% }) %>

<div class="nav">
    <a href="/student-dash" class="active">üîç<br>Explore</a>
    <a href="/my-applications">üìù<br>Track Applications</a>
    <a href="/profile">üë§<br>Profile</a>
</div>

<script>
document.getElementById("search").addEventListener("input", function(){
    let v=this.value.toLowerCase();
    document.querySelectorAll(".job").forEach(j=>{
        j.style.display = j.dataset.search.includes(v) ? "block" : "none";
    });
});
</script>

</body>
</html>
