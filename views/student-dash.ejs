<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Student Dashboard | Explore Internships</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
    <style>
        body {
            font-family: 'Inter', sans-serif;
            background-color: #f8fafc;
            padding-bottom: 90px; /* Space for mobile bottom nav */
        }
        .job-card {
            transition: transform 0.2s ease, box-shadow 0.2s ease;
            border-radius: 20px;
        }
        .job-card:hover {
            transform: translateY(-5px);
            box-shadow: 0 10px 20px rgba(0,0,0,0.1) !important;
        }
        .btn-gradient {
            background: linear-gradient(135deg, #6366f1 0%, #a855f7 100%);
            color: white;
            border: none;
            transition: opacity 0.2s;
        }
        .btn-gradient:hover {
            opacity: 0.9;
            color: white;
        }
        .badge-skill {
            background-color: #eef2ff;
            color: #4f46e5;
            border: 1px solid #e0e7ff;
        }
        /* Search bar styling */
        .search-container {
            background: white;
            border-radius: 15px;
            padding: 10px 20px;
            box-shadow: 0 4px 6px -1px rgba(0, 0, 0, 0.1);
        }
    </style>
</head>
<body>

    <div class="container py-4">
        <header class="d-flex justify-content-between align-items-center mb-4">
            <div>
                <h2 class="fw-bold text-dark mb-0">Explore <span class="text-primary">Internships</span></h2>
                <p class="text-muted small">Find your next opportunity and track your progress.</p>
            </div>
            <!-- <img src="https://ui-avatars.com/api/?name=Student&background=6366f1&color=fff" class="rounded-circle shadow-sm" width="50"> -->
        </header>

        <div class="search-container mb-4 d-flex align-items-center">
            <span class="me-2 text-muted">üîç</span>
            <input type="text" id="studentSearch" class="form-control border-0 shadow-none" placeholder="Search by company, title, or skills (e.g., Java, Frontend)...">
        </div>

        <div class="row" id="jobGrid">
            <% if (internships.length > 0) { %>
                <% internships.forEach(job => { %>
                    <div class="col-12 col-lg-6 mb-4 job-card-wrapper" data-search="<%= job.title.toLowerCase() %> <%= job.skills_needed.toLowerCase() %> <%= job.recruiter.toLowerCase() %>">
                        <div class="card job-card border-0 shadow-sm h-100">
                            <div class="card-body p-4">
                                <div class="d-flex justify-content-between align-items-start mb-2">
                                    <h5 class="fw-bold mb-0 text-dark"><%= job.title %></h5>
                                    <span class="fw-bold text-primary"><%= job.pay %></span>
                                </div>
                                <p class="text-muted small mb-3">Posted by: <strong><%= job.recruiter %></strong></p>
                                
                                <div class="mb-3">
                                    <% job.skills_needed.split(',').forEach(skill => { %>
                                        <span class="badge rounded-pill badge-skill px-3 py-2 me-1 mb-1 small">
                                            <%= skill.trim() %>
                                        </span>
                                    <% }) %>
                                </div>

                                <div class="row bg-light rounded-3 p-2 mb-4 mx-0 text-center small text-muted">
                                    <div class="col-6 border-end">Year: <%= job.target_year %></div>
                                    <div class="col-6">Openings: <%= job.open_positions %></div>
                                </div>

                                <div class="d-grid gap-2">
                                    <a href="<%= job.link %>" target="_blank" class="btn btn-outline-primary fw-bold rounded-pill">
                                        1. Visit Official Site ‚Üó
                                    </a>
                                    <form action="/apply/<%= job.id %>" method="POST">
                                        <button type="submit" class="btn btn-gradient w-100 fw-bold rounded-pill py-2 shadow-sm">
                                            2. Mark as Submitted ‚úÖ
                                        </button>
                                    </form>
                                </div>
                                <p class="text-center text-muted mt-2 mb-0" style="font-size: 0.7rem;">
                                    Confirm here after applying on the company's portal.
                                </p>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center py-5">
                    <p class="text-muted">No internships available at the moment. Check back later!</p>
                </div>
            <% } %>
        </div>

        <div id="noResults" class="text-center py-5 d-none">
            <h4 class="text-muted">No matches found...</h4>
            <p class="small text-muted">Try searching for different keywords or skills.</p>
        </div>
    </div>

    <div class="mobile-nav">
        <a href="/student-dash" class="nav-item active">
            <div class="icon">üîç</div>
            <span>Explore</span>
        </a>
        <a href="/my-applications" class="nav-item">
            <div class="icon">üìù</div>
            <span>My Apps</span>
        </a>
        <a href="/profile" class="nav-item">
            <div class="icon">üë§</div>
            <span>Profile</span>
        </a>
    </div>

    <script>
        const searchInput = document.getElementById('studentSearch');
        const jobWrappers = document.querySelectorAll('.job-card-wrapper');
        const noResults = document.getElementById('noResults');

        searchInput.addEventListener('input', function(e) {
            const term = e.target.value.toLowerCase().trim();
            let visibleCount = 0;

            jobWrappers.forEach(wrapper => {
                const searchContent = wrapper.getAttribute('data-search');
                
                if (searchContent.includes(term)) {
                    wrapper.classList.remove('d-none');
                    visibleCount++;
                } else {
                    wrapper.classList.add('d-none');
                }
            });

            // Toggle "No Results" message
            if (visibleCount === 0) {
                noResults.classList.remove('d-none');
            } else {
                noResults.classList.add('d-none');
            }
        });
    </script>

</body>
</html>