<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>My Applications</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">

<style>
body{
    font-family:'Inter',sans-serif;
    background:#f8fafc;
    padding-bottom:90px;
}

/* App header */
.page-title{
    font-weight:700;
}

/* Search bar */
.search-box{
    background:white;
    padding:12px 16px;
    border-radius:14px;
    box-shadow:0 5px 15px rgba(0,0,0,.05);
    margin-bottom:12px;
}

/* Filter buttons */
.filter-bar{
    display:flex;
    gap:10px;
    flex-wrap:wrap;
    margin-bottom:18px;
}

.filter-btn{
    border:2px solid #6366f1;
    background:white;
    color:#6366f1;
    border-radius:20px;
    padding:6px 14px;
    font-size:13px;
    font-weight:700;
}

.filter-btn.active{
    background:#6366f1;
    color:white;
}

/* Application Card */
.app-card{
    background:white;
    border-radius:18px;
    padding:16px;
    box-shadow:0 10px 30px rgba(0,0,0,.05);
    margin-bottom:16px;
}

/* Status pill */
.status-pill{
    padding:6px 14px;
    border-radius:20px;
    font-size:12px;
    font-weight:700;
}

.status-Applied{ background:#e0e7ff; color:#4338ca; }
.status-Received{ background:#fff7ed; color:#c2410c; }
.status-Hired{ background:#dcfce7; color:#15803d; }

/* Action buttons */
.actions{
    display:grid;
    grid-template-columns:1fr 1fr;
    gap:12px;
    margin-top:14px;
}

.btn-view{
    border:2px solid #6366f1;
    background:white;
    color:#6366f1;
    border-radius:14px;
    padding:12px;
    font-weight:700;
    text-align:center;
    text-decoration:none;
}

.btn-remove{
    background:#fee2e2;
    color:#b91c1c;
    border:none;
    border-radius:14px;
    padding:12px;
    font-weight:700;
}

/* Update status */
.status-update{
    margin-top:12px;
    display:flex;
    gap:10px;
}

.status-update select{
    flex:1;
    border-radius:12px;
    padding:10px;
    border:1px solid #e5e7eb;
}

.status-update button{
    background:#6366f1;
    color:white;
    border:none;
    border-radius:12px;
    padding:10px 16px;
    font-weight:700;
}

/* Mobile bottom nav */
.mobile-nav{
    position:fixed;
    bottom:0;
    left:0;
    right:0;
    background:white;
    display:flex;
    justify-content:space-around;
    padding:12px 0;
    box-shadow:0 -5px 20px rgba(0,0,0,.06);
    border-radius:20px 20px 0 0;
}

.nav-item{
    text-decoration:none;
    color:#6b7280;
    text-align:center;
    font-size:12px;
    font-weight:600;
}

.nav-item div{
    font-size:20px;
}

.nav-item.active{
    color:#6366f1;
}
</style>
</head>

<body>

<div class="container py-4">
    <h3 class="page-title mb-1">My <span class="text-primary">Applications</span></h3>
    <p class="text-muted small">Track your progress in real time</p>

    <!-- SEARCH -->
    <div class="search-box">
        <input id="searchInput" class="form-control border-0" placeholder="Search by company or role">
    </div>

    <!-- FILTERS -->
    <div class="filter-bar">
        <button class="filter-btn active" data-status="all">All</button>
        <button class="filter-btn" data-status="Applied">Applied</button>
        <button class="filter-btn" data-status="Received">In Progress</button>
        <button class="filter-btn" data-status="Hired">Hired</button>
    </div>

    <% apps.forEach(app => { %>
        <div class="app-card"
             data-title="<%= app.title.toLowerCase() %>"
             data-status="<%= app.status.split(' ')[0] %>">

            <div class="d-flex justify-content-between">
                <div>
                    <h6 class="fw-bold"><%= app.title %></h6>
                    <small class="text-muted">Application #<%= app.id %></small>
                </div>
                <span class="status-pill status-<%= app.status.split(' ')[0] %>"><%= app.status %></span>
            </div>

            <form action="/update-app-status/<%= app.id %>" method="POST" class="status-update">
                <select name="status">
                    <option value="Applied" <%= app.status === 'Applied' ? 'selected' : '' %>>Applied</option>
                    <option value="Received Call/Message" <%= app.status === 'Received Call/Message' ? 'selected' : '' %>>Received Call</option>
                    <option value="Received Test Link" <%= app.status === 'Received Test Link' ? 'selected' : '' %>>Test Link</option>
                    <option value="Received Interview Link" <%= app.status === 'Received Interview Link' ? 'selected' : '' %>>Interview</option>
                    <option value="Hired" <%= app.status === 'Hired' ? 'selected' : '' %>>Hired üéâ</option>
                </select>
                <button>Update</button>
            </form>

            <div class="actions">
                <a href="<%= app.link %>" target="_blank" class="btn-view">üåê View Job</a>
                <form action="/remove-application/<%= app.id %>" method="POST">
                    <button class="btn-remove">üóë Remove</button>
                </form>
            </div>
        </div>
    <% }) %>

</div>

<div class="mobile-nav">
    <a href="/student-dash" class="nav-item"><div>üîç</div>Explore</a>
    <a href="/my-applications" class="nav-item active"><div>üìù</div>Track</a>
    <a href="/profile" class="nav-item"><div>üë§</div>Profile</a>
</div>

<script>
const searchInput = document.getElementById("searchInput");
const cards = document.querySelectorAll(".app-card");
const filterBtns = document.querySelectorAll(".filter-btn");
let active = "all";

function filter(){
    const term = searchInput.value.toLowerCase();

    cards.forEach(card => {
        const title = card.dataset.title;
        const status = card.dataset.status;

        const matchText = title.includes(term);
        const matchStatus = active === "all" || status === active;

        card.style.display = (matchText && matchStatus) ? "block" : "none";
    });
}

searchInput.addEventListener("input", filter);

filterBtns.forEach(btn => {
    btn.addEventListener("click", () => {
        filterBtns.forEach(b => b.classList.remove("active"));
        btn.classList.add("active");
        active = btn.dataset.status;
        filter();
    });
});
</script>

</body>
</html>
