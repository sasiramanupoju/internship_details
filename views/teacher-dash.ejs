<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Teacher Portal | Manage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link href="https://fonts.googleapis.com/css2?family=Plus+Jakarta+Sans:wght@400;600;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="/style.css">
</head>
<body>
    
    <div class="container py-4">
        <header class="d-flex justify-content-between align-items-center mb-4 animate__animated animate__fadeIn">
            <div>
                <h2 class="fw-800 text-dark mb-0">Teacher <span class="text-gradient">Portal</span></h2>
                <p class="text-muted small">Elevate student careers</p>
            </div>
            <div class="profile-trigger">
                <img src="https://ui-avatars.com/api/?name=Teacher&background=6366f1&color=fff" class="rounded-circle shadow-sm" width="45">
            </div>
        </header>

        <div class="post-section mb-5 animate__animated animate__fadeInUp">
            <button class="btn btn-post-toggle w-100 d-flex justify-content-between align-items-center mb-3" type="button" data-bs-toggle="collapse" data-bs-target="#postForm">
                <span class="fw-bold"><span class="me-2">‚ú®</span> Post New Internship</span>
                <span class="toggle-icon">Ôºã</span>
            </button>

            <div class="collapse shadow-lg" id="postForm">
                <div class="glass-card p-4 border-0">
                    <form action="/post-internship" method="POST">
                        <div class="row g-3">
                            <div class="col-12">
                                <div class="form-floating">
                                    <input name="title" class="form-control" id="t1" placeholder="Title" required>
                                    <label for="t1">Internship Title</label>
                                </div>
                            </div>
                            <div class="col-12">
                                <div class="form-floating">
                                    <input name="link" class="form-control" id="t2" placeholder="URL" required>
                                    <label for="t2">Application Link</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating">
                                    <input name="skills" class="form-control" id="t3" placeholder="Skills">
                                    <label for="t3">Skills Needed</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating">
                                    <input name="year" class="form-control" id="t4" placeholder="Year">
                                    <label for="t4">Target Year</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating">
                                    <input name="pay" class="form-control" id="t5" placeholder="Pay">
                                    <label for="t5">Stipend</label>
                                </div>
                            </div>
                            <div class="col-6">
                                <div class="form-floating">
                                    <input type="number" name="positions" class="form-control" id="t6" placeholder="Openings">
                                    <label for="t6">Openings</label>
                                </div>
                            </div>
                        </div>
                        <button type="submit" class="btn btn-gradient w-100 mt-4 py-3 fw-bold haptic-btn">
                            Publish Now üöÄ
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="search-wrapper mb-4 animate__animated animate__fadeIn animate__delay-1s">
            <input type="text" id="searchInput" class="form-control" placeholder="Search your listings...">
            <span class="search-icon">üîç</span>
        </div>

        <h5 class="fw-bold mb-3 ms-1">Active Listings</h5>

        <div id="listingsContainer" class="row">
            <% if (internships.length > 0) { %>
                <% internships.forEach((job, index) => { %>
                    <div class="col-12 mb-3 listing-card-wrapper animate__animated animate__fadeInUp" style="animation-delay: <%= index * 0.1 %>s" data-title="<%= job.title.toLowerCase() %>" data-skills="<%= job.skills_needed.toLowerCase() %>">
                        <div class="card listing-card h-100 p-3">
                            <div class="d-flex justify-content-between align-items-center mb-3">
                                <div>
                                    <h6 class="fw-800 mb-0 text-dark"><%= job.title %></h6>
                                    <small class="text-primary fw-600">Active</small>
                                </div>
                                <span class="date-badge">
                                    <%= job.created_at ? new Date(job.created_at).toLocaleDateString('en-GB', { day: '2-digit', month: 'short' }) : 'Today' %>
                                </span>
                            </div>
                            
                            <div class="stats-grid mb-3">
                                <div class="stat-item">
                                    <span class="stat-value"><%= job.applicant_count %></span>
                                    <span class="stat-label">APPLIED</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= job.open_positions %></span>
                                    <span class="stat-label">SLOTS</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= job.pay %></span>
                                    <span class="stat-label">PAY</span>
                                </div>
                            </div>

                            <div class="d-flex gap-2">
                                <a href="/applicants/<%= job.id %>" class="btn btn-action-view flex-grow-1">View Students</a>
                                <form action="/delete-internship/<%= job.id %>" method="POST" onsubmit="return confirm('Delete this listing?');" class="m-0">
                                    <button type="submit" class="btn btn-action-delete">üóëÔ∏è</button>
                                </form>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } %>
        </div>
    </div>

    <nav class="mobile-nav">
        <a href="/teacher-dash" class="nav-item active"><i>üè†</i><span>Home</span></a>
        <a href="/profile" class="nav-item"><i>üë§</i><span>Profile</span></a>
        <a href="/" class="nav-item"><i>üö™</i><span>Exit</span></a>
    </nav>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        // Haptic Feedback Search
        const searchInput = document.getElementById('searchInput');
        const cards = document.querySelectorAll('.listing-card-wrapper');

        searchInput.addEventListener('input', (e) => {
            const term = e.target.value.toLowerCase();
            cards.forEach(card => {
                const title = card.getAttribute('data-title');
                const skills = card.getAttribute('data-skills');
                const isMatch = title.includes(term) || skills.includes(term);
                card.style.display = isMatch ? 'block' : 'none';
                if(isMatch) card.classList.add('animate__animated', 'animate__fadeIn');
            });
        });

        // Touch Interaction
        document.querySelectorAll('.listing-card').forEach(card => {
            card.addEventListener('touchstart', () => card.style.transform = "scale(0.97)");
            card.addEventListener('touchend', () => card.style.transform = "scale(1)");
        });
    </script>
</body>
</html>