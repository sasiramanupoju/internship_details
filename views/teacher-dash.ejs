<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<title>Teacher Portal</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/style.css?v=<%= Date.now() %>">

<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
</head>

<body>

<div class="container py-4">

    <!-- Header -->
    <div class="d-flex justify-content-between align-items-center mb-4">
        <div>
            <h4 class="fw-bold mb-0">Teacher <span class="text-primary">Portal</span></h4>
            <small class="text-muted">Manage internships</small>
        </div>
        <div class="badge bg-primary">Live</div>
    </div>

    <!-- Post Internship -->
    <div class="glass-card p-3 mb-4">
        <h6 class="fw-bold mb-3">Post New Internship</h6>

        <form action="/post-internship" method="POST">
            <input name="title" class="form-control mb-2" placeholder="Internship Title" required>
            <input name="link" class="form-control mb-2" placeholder="Application Link" required>

            <div class="row g-2">
                <div class="col-6">
                    <input name="skills" class="form-control" placeholder="Skills">
                </div>
                <div class="col-6">
                    <input name="year" class="form-control" placeholder="Target Year">
                </div>
                <div class="col-6">
                    <input name="pay" class="form-control" placeholder="Stipend">
                </div>
                <div class="col-6">
                    <input name="positions" type="number" class="form-control" placeholder="Openings">
                </div>
            </div>

            <button class="btn btn-gradient w-100 mt-3">
                Publish Internship
            </button>
        </form>
    </div>

    <!-- Search -->
    <input id="searchInput" class="form-control mb-3" placeholder="Search internship">

    <!-- Listings -->
    <div id="listings">
        <% internships.forEach(job => { %>
        <div class="card internship-card mb-3 listing-card"
            data-title="<%= job.title.toLowerCase() %>"
            data-skills="<%= job.skills_needed.toLowerCase() %>">

            <div class="card-body">
                <h6 class="fw-bold"><%= job.title %></h6>
                <p class="small text-muted">Skills: <%= job.skills_needed %></p>

                <div class="d-flex justify-content-between">
                    <div>
                        <strong><%= job.applicant_count %></strong>
                        <small class="text-muted">Applied</small>
                    </div>
                    <div>
                        <strong><%= job.open_positions %></strong>
                        <small class="text-muted">Open</small>
                    </div>
                </div>

                <div class="d-flex gap-2 mt-3">
                    <a href="/applicants/<%= job.id %>" class="btn btn-sm btn-primary w-100">
                        Students
                    </a>

                    <form action="/delete-internship/<%= job.id %>" method="POST" class="w-100">
                        <button class="btn btn-sm btn-outline-danger w-100">
                            Delete
                        </button>
                    </form>
                </div>
            </div>
        </div>
        <% }) %>
    </div>

</div>

<!-- Mobile Navigation -->
<div class="mobile-nav">
    <a href="/teacher-dash" class="nav-item active">ğŸ <br>Home</a>
    <a href="/profile" class="nav-item">ğŸ‘¤<br>Profile</a>
    <a href="/" class="nav-item">ğŸšª<br>Logout</a>
</div>

<script>
const searchInput = document.getElementById("searchInput");
const cards = document.querySelectorAll(".listing-card");

searchInput.addEventListener("input", e => {
    const term = e.target.value.toLowerCase();

    cards.forEach(card => {
        const t = card.dataset.title;
        const s = card.dataset.skills;
        card.style.display = (t.includes(term) || s.includes(term)) ? "block" : "none";
    });
});
</script>

</body>
</html>
