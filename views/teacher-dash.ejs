<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">
<title>Teacher Dashboard</title>

<link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
<link rel="stylesheet" href="/style.css?v=<%= Date.now() %>">
<link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700&display=swap" rel="stylesheet">
</head>

<body>

<div class="container py-3">

    <h4 class="fw-bold mb-3">Teacher Dashboard</h4>

    <!-- Post Internship -->
    <div class="card shadow-sm mb-3 p-3 rounded-4">
        <h6 class="fw-bold mb-2">Post Internship</h6>
        <form action="/post-internship" method="POST">
            <input name="title" class="form-control mb-2" placeholder="Internship Title" required>
            <input name="link" class="form-control mb-2" placeholder="Application Link" required>
            <input name="skills" class="form-control mb-2" placeholder="Skills Required">
            <div class="row g-2">
                <div class="col-6">
                    <input name="year" class="form-control" placeholder="Target Year">
                </div>
                <div class="col-6">
                    <input name="positions" type="number" class="form-control" placeholder="Openings">
                </div>
            </div>
            <button class="btn btn-primary w-100 mt-2">Post Internship</button>
        </form>
    </div>

    <!-- Search -->
    <input id="searchInput" class="form-control mb-3" placeholder="Search internship">

    <!-- Internship List -->
    <% internships.forEach(job => { %>
    <div class="card shadow-sm mb-3 p-3 rounded-4 listing-card" data-title="<%= job.title.toLowerCase() %>">
        <h6 class="fw-bold"><%= job.title %></h6>
        <small class="text-muted">Skills: <%= job.skills_needed %></small>

        <div class="d-flex justify-content-between mt-2">
            <div>
                <strong><%= job.applicant_count %></strong>
                <small class="text-muted d-block">Applied</small>
            </div>
            <div>
                <strong><%= job.open_positions %></strong>
                <small class="text-muted d-block">Open</small>
            </div>
        </div>

        <div class="d-flex gap-2 mt-3">
            <a href="/applicants/<%= job.id %>" class="btn btn-sm btn-primary w-100">Students</a>
            <form action="/delete-internship/<%= job.id %>" method="POST" class="w-100">
                <button class="btn btn-sm btn-outline-danger w-100">Delete</button>
            </form>
        </div>
    </div>
    <% }) %>

</div>

<!-- Bottom Navigation -->
<div class="bottom-nav">
    <a href="/teacher-dash" class="nav-item active">
        <div>ğŸ </div>
        <span>Home</span>
    </a>
    <a href="/profile" class="nav-item">
        <div>ğŸ‘¤</div>
        <span>Profile</span>
    </a>
    <a href="/" class="nav-item">
        <div>ğŸšª</div>
        <span>Logout</span>
    </a>
</div>

<script>
const input = document.getElementById("searchInput");
const cards = document.querySelectorAll(".listing-card");

input.addEventListener("input", () => {
    const term = input.value.toLowerCase();
    cards.forEach(c => {
        c.style.display = c.dataset.title.includes(term) ? "block" : "none";
    });
});
</script>

</body>
</html>
