<!DOCTYPE html>
<html lang="en">
<head>
<meta charset="UTF-8">
<meta name="viewport" content="width=device-width, initial-scale=1.0">

<title>Teacher Dashboard</title>

<style>
:root {
  --primary: #4f46e5;
  --bg: #f5f7fb;
  --card: #ffffff;
  --text: #0f172a;
  --muted: #64748b;
  --danger: #ef4444;
  --radius: 14px;
}

* {
  box-sizing: border-box;
  font-family: "Inter", system-ui, sans-serif;
}

body {
  margin: 0;
  background: var(--bg);
  color: var(--text);
  padding-bottom: 90px;
}

/* Layout */
.container {
  max-width: 900px;
  margin: auto;
  padding: 20px;
}

/* Header */
.header {
  display: flex;
  justify-content: space-between;
  align-items: center;
  margin-bottom: 20px;
}

.header h1 {
  margin: 0;
  font-size: 1.4rem;
}

.header small {
  color: var(--muted);
}

/* Cards */
.card {
  background: var(--card);
  border-radius: var(--radius);
  padding: 16px;
  box-shadow: 0 10px 30px rgba(0,0,0,0.05);
  margin-bottom: 16px;
}

/* Inputs */
input, button {
  width: 100%;
  padding: 12px;
  border-radius: 10px;
  border: none;
  font-size: 14px;
}

input {
  background: #f1f5f9;
}

input:focus {
  outline: 2px solid var(--primary);
}

/* Buttons */
.btn {
  cursor: pointer;
  font-weight: 600;
}

.btn-primary {
  background: var(--primary);
  color: white;
}

.btn-danger {
  background: transparent;
  border: 1px solid var(--danger);
  color: var(--danger);
}

/* Grid */
.grid {
  display: grid;
  grid-template-columns: 1fr;
  gap: 10px;
}

@media (min-width: 600px) {
  .grid {
    grid-template-columns: repeat(2,1fr);
  }
}

/* Internship card */
.job {
  border: 1px solid #e5e7eb;
  border-radius: 12px;
  padding: 14px;
  display: flex;
  flex-direction: column;
  gap: 10px;
}

.job-title {
  font-weight: 700;
}

.job-stats {
  display: flex;
  justify-content: space-between;
  color: var(--muted);
  font-size: 13px;
}

.job-actions {
  display: grid;
  grid-template-columns: 1fr 1fr;
  gap: 10px;
}

.btn-students {
  background: linear-gradient(135deg, #4f46e5, #6366f1);
  color: white;
  border-radius: 12px;
  padding: 12px;
  font-weight: 700;
  text-align: center;
  text-decoration: none;
  box-shadow: 0 6px 14px rgba(79,70,229,0.25);
  transition: transform .15s ease, box-shadow .15s ease;
}

.btn-students:active {
  transform: scale(0.96);
}

.btn-delete {
  background: transparent;
  border: 1.5px solid #ef4444;
  color: #ef4444;
  border-radius: 12px;
  padding: 12px;
  font-weight: 700;
}


/* Search */
.search {
  margin-bottom: 15px;
}

/* Bottom Nav */
.nav {
  position: fixed;
  bottom: 0;
  left: 0;
  right: 0;
  background: white;
  display: flex;
  justify-content: space-around;
  padding: 10px 0;
  border-top: 1px solid #e5e7eb;
}

.nav a {
  text-decoration: none;
  color: var(--muted);
  text-align: center;
  font-size: 12px;
}

.nav a.active {
  color: var(--primary);
}

.nav div {
  font-size: 22px;
}
</style>
</head>

<body>

<div class="container">

  <div class="header">
    <div>
      <h1>Teacher Portal</h1>
      <small>Manage your internships</small>
    </div>
  </div>

  <!-- Post Internship -->
  <div class="card">
    <h3>Post Internship</h3>
    <form action="/post-internship" method="POST" class="grid">
      <input name="title" placeholder="Title" required>
      <input name="skills" placeholder="Skills">
      <input name="year" placeholder="Year">
      <input name="pay" placeholder="Stipend">
      <input name="positions" placeholder="Openings">
      <input name="link" placeholder="Apply Link" required>
      <button class="btn btn-primary" style="grid-column:1/-1;">Publish</button>
    </form>
  </div>

  <input style="border: #0f172a;border-radius: 2px;" id="search" class="search" placeholder="Search internships/jobs...">

  <!-- Internship List -->
  <% internships.forEach(job => { %>
    <div class="job" data-title="<%= job.title.toLowerCase() %>">
      <div class="job-title"><%= job.title %></div>
      <div class="job-stats">
        <span><%= job.applicant_count %> Applied</span>
        <span><%= job.open_positions %> Open</span>
      </div>

      <div class="job-actions">
  <a href="/applicants/<%= job.id %>" class="btn-students">
    üë• Students
  </a>

  <form action="/delete-internship/<%= job.id %>" method="POST"
        onsubmit="return confirm('Delete this internship?');">
    <button class="btn-delete">üóë Delete</button>
  </form>
</div>

    </div>
  <% }) %>

</div>

<!-- Bottom Navigation -->
<div class="nav">
  <a href="/teacher-dash" class="active"><div>üè†</div>Home</a>
  <a href="/profile"><div>üë§</div>Profile</a>
  <a href="/"><div>üö™</div>Logout</a>
</div>

<script>
const search = document.getElementById("search");
const jobs = document.querySelectorAll(".job");

search.addEventListener("input", () => {
  const term = search.value.toLowerCase();
  jobs.forEach(j => {
    j.style.display = j.dataset.title.includes(term) ? "block" : "none";
  });
});
</script>

</body>
</html>
