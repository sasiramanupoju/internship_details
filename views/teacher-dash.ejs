<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0, maximum-scale=1.0, user-scalable=no">
    <title>Teacher Portal | Manage</title>
    <link href="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/css/bootstrap.min.css" rel="stylesheet">
    <link href="https://fonts.googleapis.com/css2?family=Inter:wght@400;600;700;800&display=swap" rel="stylesheet">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/animate.css/4.1.1/animate.min.css"/>
    <link rel="stylesheet" href="/style.css">
</head>
<body class="mobile-optimized">
    
    <div class="container py-4 px-3">
        <header class="d-flex justify-content-between align-items-center mb-4 animate__animated animate__fadeIn">
            <div>
                <h2 class="fw-800 text-dark mb-0">Teacher <span class="text-primary">Portal</span></h2>
                <p class="text-muted small mb-0">Elevate student careers</p>
            </div>
            <div class="avatar-circle">
                <img src="https://ui-avatars.com/api/?name=Teacher&background=6366f1&color=fff" class="rounded-circle shadow-sm" width="45">
            </div>
        </header>

        <div class="row g-2 mb-4 animate__animated animate__fadeInUp">
            <div class="col-6">
                <div class="stat-pill">
                    <span class="label">Posts</span>
                    <span class="value"><%= internships.length %></span>
                </div>
            </div>
            <div class="col-6">
                <div class="stat-pill">
                    <span class="label">Total Apps</span>
                    <span class="value"><%= internships.reduce((acc, curr) => acc + parseInt(curr.applicant_count || 0), 0) %></span>
                </div>
            </div>
        </div>

        <div class="mb-4">
            <button class="btn btn-post-toggle w-100 shadow-sm" type="button" data-bs-toggle="collapse" data-bs-target="#postForm">
                <span>‚ú® Post New Internship</span>
                <i class="plus-icon">+</i>
            </button>
            <div class="collapse mt-3" id="postForm">
                <div class="glass-card p-4 border-0 shadow-lg">
                    <form action="/post-internship" method="POST">
                        <div class="row g-3">
                            <div class="col-12">
                                <label class="small fw-bold text-muted">Position Title</label>
                                <input name="title" placeholder="e.g. Frontend Intern" class="form-control big-input" required>
                            </div>
                            <div class="col-12">
                                <label class="small fw-bold text-muted">Link</label>
                                <input name="link" placeholder="External URL" class="form-control big-input" required>
                            </div>
                            <div class="col-6">
                                <label class="small fw-bold text-muted">Skills</label>
                                <input name="skills" placeholder="Java, React" class="form-control big-input">
                            </div>
                            <div class="col-6">
                                <label class="small fw-bold text-muted">Target Year</label>
                                <input name="year" placeholder="3rd, 4th" class="form-control big-input">
                            </div>
                            <div class="col-6">
                                <label class="small fw-bold text-muted">Stipend</label>
                                <input name="pay" placeholder="‚Çπ10k" class="form-control big-input">
                            </div>
                            <div class="col-6">
                                <label class="small fw-bold text-muted">Openings</label>
                                <input type="number" name="positions" placeholder="5" class="form-control big-input">
                            </div>
                        </div>
                        <button class="btn btn-gradient-big w-100 mt-4 haptic-btn">
                            Publish Opportunity üöÄ
                        </button>
                    </form>
                </div>
            </div>
        </div>

        <div class="search-wrapper mb-4 animate__animated animate__fadeIn">
            <input type="text" id="searchInput" class="form-control search-pill" placeholder="Search your listings...">
            <span class="search-icon">üîç</span>
        </div>

        <h5 class="fw-bold mb-3 ms-1">Active Listings</h5>

        <div id="listingsContainer" class="row">
            <% if (internships.length > 0) { %>
                <% internships.forEach((job, index) => { %>
                    <div class="col-12 mb-3 listing-card-wrapper animate__animated animate__fadeInUp" 
                         style="animation-delay: <%= index * 0.1 %>s"
                         data-title="<%= job.title.toLowerCase() %>" 
                         data-skills="<%= job.skills_needed.toLowerCase() %>">
                        <div class="card listing-card border-0 shadow-sm p-3">
                            <div class="d-flex justify-content-between align-items-start mb-3">
                                <div>
                                    <h6 class="fw-bold text-dark mb-0"><%= job.title %></h6>
                                    <span class="date-badge">üìÖ <%= job.created_at ? new Date(job.created_at).toLocaleDateString() : 'Today' %></span>
                                </div>
                                <form action="/delete-internship/<%= job.id %>" method="POST" onsubmit="return confirm('Delete this listing?');" class="m-0">
                                    <button type="submit" class="btn-icon-delete">üóëÔ∏è</button>
                                </form>
                            </div>
                            
                            <div class="stats-grid mb-3">
                                <div class="stat-item">
                                    <span class="stat-value text-primary"><%= job.applicant_count %></span>
                                    <span class="stat-label">APPLIED</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= job.open_positions %></span>
                                    <span class="stat-label">SLOTS</span>
                                </div>
                                <div class="stat-item">
                                    <span class="stat-value"><%= job.pay %></span>
                                    <span class="stat-label">PAY</span>
                                </div>
                            </div>

                            <div class="d-grid">
                                <a href="/applicants/<%= job.id %>" class="btn btn-view-students haptic-btn">
                                    View Applied Students
                                </a>
                            </div>
                        </div>
                    </div>
                <% }) %>
            <% } else { %>
                <div class="col-12 text-center py-5 empty-state">
                    <span class="empty-icon">üèúÔ∏è</span>
                    <h5 class="fw-bold mt-3">No active listings</h5>
                    <p class="text-muted">Tap the button above to post your first internship.</p>
                </div>
            <% } %>
        </div>

        <div id="noResults" class="text-center py-5 d-none animate__animated animate__shakeX">
            <p class="text-muted">No matches found for your search.</p>
        </div>
    </div>

    <nav class="fixed-bottom-nav">
        <a href="/teacher-dash" class="nav-btn active">
            <span class="icon">üè†</span>
            <span class="label">Home</span>
        </a>
        <a href="/profile" class="nav-btn">
            <span class="icon">üë§</span>
            <span class="label">Profile</span>
        </a>
        <a href="/" class="nav-btn">
            <span class="icon">üö™</span>
            <span class="label">Logout</span>
        </a>
    </nav>

    <script src="https://cdn.jsdelivr.net/npm/bootstrap@5.3.0/dist/js/bootstrap.bundle.min.js"></script>
    <script>
        const searchInput = document.getElementById('searchInput');
        const cards = document.querySelectorAll('.listing-card-wrapper');
        const noResults = document.getElementById('noResults');

        searchInput.addEventListener('input', (e) => {
            const term = e.target.value.toLowerCase();
            let hasVisible = false;

            cards.forEach(card => {
                const text = card.getAttribute('data-title') + card.getAttribute('data-skills');
                if (text.includes(term)) {
                    card.style.display = 'block';
                    hasVisible = true;
                } else {
                    card.style.display = 'none';
                }
            });
            noResults.classList.toggle('d-none', hasVisible);
        });

        // Touch feedback
        document.querySelectorAll('.haptic-btn').forEach(btn => {
            btn.addEventListener('touchstart', () => btn.style.transform = "scale(0.96)");
            btn.addEventListener('touchend', () => btn.style.transform = "scale(1)");
        });
    </script>
</body>
</html>